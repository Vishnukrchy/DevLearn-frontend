name: CI/CD Pipeline for Staging

on:
  push:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout the repository code
      - name: Checkout Code
        uses: actions/checkout@v3

      # Step 2: Set up Node.js environment
      - name: Set Up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20.x' # Use the version matching your project

      # Step 3: Install dependencies
      - name: Install Dependencies
        run: npm install

      # Step 4: Run Linting (Optional)
      - name: Run Lint
        run: npm run lint # Ensure you have linting setup in your package.json

      # Step 5: Run Tests (Optional but recommended)
      - name: Run Tests
        run: npm test # Ensure you have unit tests setup

      # Step 6: Build Project
      - name: Build Project
        run: npm run build

  deploy:
    runs-on: ubuntu-latest
    needs: build # This job depends on the success of the build job

    steps:
      # Step 1: Checkout the repository code again (for deployment)
      - name: Checkout Code
        uses: actions/checkout@v3

      # Step 2: Trigger Vercel Deploy Hook
      - name: Staging Hook
        run: |
          curl -X POST https://api.vercel.com/v1/integrations/deploy/prj_PvP0js3E3qCnZznELE847PnBViS5/7Hfq5rGespme
